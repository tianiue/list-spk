<?xml version="1.0" encoding="UTF-8"?>
<window name="OpenListMainWindow" title="OpenList客户端" width="600" height="400">
    <tabview>
        <tab name="connection" title="连接设置">
            <panel>
                <label text="连接方式:" x="20" y="20" width="100" height="20"/>
                <radiogroup name="connection_type" x="130" y="20" width="300" height="60">
                    <radio name="webdav" text="WebDAV" checked="true"/>
                    <radio name="api" text="OpenList API"/>
                </radiogroup>
                
                <label text="服务器地址:" x="20" y="100" width="100" height="20"/>
                <textbox name="server" x="130" y="100" width="300" height="25" placeholder="https://your-openlist-server"/>
                
                <label text="用户名:" x="20" y="140" width="100" height="20"/>
                <textbox name="username" x="130" y="140" width="300" height="25"/>
                
                <label text="密码:" x="20" y="180" width="100" height="20"/>
                <textbox name="password" x="130" y="180" width="300" height="25" type="password"/>
                
                <button name="connect" text="连接" x="130" y="230" width="100" height="30"/>
                <label name="connection_status" x="250" y="235" width="200" height="20" color="gray"/>
            </panel>
        </tab>
        
        <tab name="mount" title="挂载设置">
            <panel>
                <label text="本地挂载目录:" x="20" y="20" width="120" height="20"/>
                <textbox name="mount_point" x="150" y="20" width="300" height="25" value="/volume1/OpenList_Mount"/>
                
                <button name="mount" text="挂载" x="150" y="70" width="100" height="30"/>
                <button name="unmount" text="解除挂载" x="270" y="70" width="100" height="30"/>
                
                <label name="mount_status" x="150" y="120" width="300" height="20" color="gray"/>
                
                <checkbox name="auto_mount" text="开机自动挂载" x="150" y="160" width="200" height="20"/>
            </panel>
        </tab>
        
        <tab name="about" title="关于">
            <panel>
                <image name="logo" x="50" y="30" width="100" height="100" path="/var/packages/OpenList/target/icon.png"/>
                <label text="OpenList客户端" x="180" y="50" width="200" height="30" font="bold"/>
                <label text="版本: 1.0.0" x="180" y="90" width="200" height="20"/>
                <label text="OpenList网盘群晖客户端" x="180" y="120" width="300" height="20"/>
                <label text="支持WebDAV和API连接方式" x="180" y="145" width="300" height="20"/>
            </panel>
        </tab>
    </tabview>
</window>
